            "name": "Inventory",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/Inventory.Service/bin/Debug/net7.0/Inventory.Service.dll",
